---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<html>
    <head>
        <title>Blog</title>
    </head>
    <body>
        <h1>Blog</h1>
        <ul>
            {posts.map(post => (
                <li><a href={`/maze/blog/${post.slug}`}>{post.data.title}</a></li>
            ))}
        </ul>
    </body>
</html>
