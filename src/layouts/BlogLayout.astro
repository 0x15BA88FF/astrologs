---
import BaseLayout from "@/layouts/BaseLayout.astro";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Sidebar from "@/components/Sidebar.astro";
import SidebarToggle from "@/components/SidebarToggleButton.astro";

const { title, cssclasses } = Astro.props;
---

<BaseLayout title={title} cssclasses={cssclasses}>
    <Sidebar />
    <div class="w-full max-w-2xl flex-grow mx-auto px-4">
        <Header>
            <SidebarToggle />
        </Header>
        <section class="min-h-screen p-2">
            <slot />
        </section>
        <Footer />
    </div>
<BaseLayout/>

<script>
    import "@/scripts/controlSidebar.js";
</script>
